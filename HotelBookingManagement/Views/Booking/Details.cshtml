@model HotelBookingManagement.Models.Booking

<h2>Booking Details</h2>

<div>
    <h4>Booking</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Customer</dt>
        <dd class="col-sm-10">@Model.Customer.Name</dd>

        <dt class="col-sm-2">Room</dt>
        <dd class="col-sm-10">@Model.Room.Type</dd>

        <dt class="col-sm-2">Check-In Date</dt>
        <dd class="col-sm-10">@Model.CheckInDate</dd>

        <dt class="col-sm-2">Check-Out Date</dt>
        <dd class="col-sm-10">@Model.CheckOutDate</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>
</div>

<a asp-action="Index" class="btn btn-primary">Back to List</a>
