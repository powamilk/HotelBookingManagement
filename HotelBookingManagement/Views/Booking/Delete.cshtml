@model HotelBookingManagement.Models.Booking

<h2>Delete Booking</h2>

<h3>Are you sure you want to delete this booking?</h3>

<div>
    <h4>Booking</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Customer</dt>
        <dd class="col-sm-10">@Model.Customer.Name</dd>

        <dt class="col-sm-2">Room</dt>
        <dd class="col-sm-10">@Model.Room.Type</dd>

        <dt class="col-sm-2">Check-In Date</dt>
        <dd class="col-sm-10">@Model.CheckInDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Check-Out Date</dt>
        <dd class="col-sm-10">@Model.CheckOutDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
