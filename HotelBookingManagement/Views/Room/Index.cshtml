@model IEnumerable<HotelBookingManagement.Models.Room>

<h2>Room List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Type</th>
            <th>Price</th>
            <th>Status</th>
            <th>Capacity</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Type</td>
                <td>@item.Price</td>
                <td>@item.Status</td>
                <td>@item.Capacity</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New Room</a>
